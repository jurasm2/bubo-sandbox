
{if $images}

<div class="col-xs-12">

	<div class="img-gallery carousel">
		{foreach $images as $image}
			{var $imageSizes = getimagesize($image->getDirPath(1))}
			<figure>
				<a href="{$image->getPath(1)}" data-size="{$imageSizes[0]}x{$imageSizes[1]}">
					<img height="500" src="{$image->getPath(1)}" alt="">
				</a>
			</figure>
		{/foreach}
	</div>
</div>

{/if}