<div class="image-container">
{if $images}
    {foreach $images as $image}
        {if $iterator->counter <= 3}
        <div class="img-box">
            <a href="{$image->getPath(0)}"><img src="{$image->getPath(2)}" alt="{$image->getDescription('title')}" title="{$image->getDescription('title')}" /></a>
        </div>
        {/if}
    {/foreach}
{/if}
</div>